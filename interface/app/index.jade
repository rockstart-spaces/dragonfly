doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1, maximum-scale=1')
    title Dragonfly
    link(href='lib.css', rel='stylesheet')
    link(href='app.css', rel='stylesheet')
  body(ng-app='dragonfly', ng-controller='MainController')
    main.main.container
      .row
        .col-sm-6.col-sm-offset-3.text-center
          img(src='img/rockstart.png', class='img-responsive')
          h1 Dragonfly

          form
            .form-group
              input.form-control.input-lg(type='text', name='search', autofocus, autocomplete='off')
              span.input-icon.fui-search
    script(src='lib.js')
    script(src='app.js')
